extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Lojab.id
			small your Hijab all day!
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-dashboard
					| Level 
			li.active Here 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Pelanggan
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/customers/add')
					.row
						
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| Ã—
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								.form-group
									label
										| Nama Customer
									input(type='text',value='#{name}',name='nama',placeholder='Enter Nama', autofocus).form-control
								.form-group
									label
										| Pesanan
									input(type='text',name='pesanan',placeholder='Enter Pesanan').form-control
								.form-group
									label
										| Satuan
									input(type='text',name='satuan',placeholder='Enter Satuan').form-control
								.form-group
								label
										| Warna
									input(type='text',name='warna',placeholder='Enter Warna').form-control
								.form-group
									label
										| Tanggal
									input(type='text',name='tanggal',placeholder='Enter Tanggal').form-control
							.box-footer
								button(type='submit').btn.btn-primary
									| Submit
								a(href='/customers').btn.btn-primary.pull-right
									| Back